<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <objectAnimator
            android:propertyName="scaleX"
            android:duration="100"
            android:valueTo="0.95"
            android:valueType="floatType"/>
    </item>
    <item>
        <objectAnimator
            android:propertyName="scaleX"
            android:duration="100"
            android:valueTo="1"
            android:valueType="floatType"/>
    </item>
</selector>
